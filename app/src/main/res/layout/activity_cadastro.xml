<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cadastro de usuário"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Seja bem vindo ao seu diario criptografado"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Nome completo" />


            <EditText
                android:id="@+id/txt_nome"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="17dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lbl_advertencia_cadastrar_usuario_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Não podem haver espaços vazios no começo e final do nome, números tambem não são permitidos *"
                android:textColor="@color/red"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gênero"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Tipo de cadastro" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spn_genero"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:contentDescription="spinner de genero"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/spn_tipo_perfil"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:gravity="end"
                    android:contentDescription="spinner de genero"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lbl_advertencia_cadastrar_usuario_spiners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Campo gênero ou tipo de cadastro não podem ser vazios*"
                android:textColor="@color/red"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de nascimento"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/txt_cpf"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="CPF"
                android:inputType="number"
                android:textSize="14sp"
                app:mask="###.###.###-##" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_data_nascimento"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:hint="@string/selecione_a_data"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_advertencia_cpf_invalido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* CPF não válido *"
                android:textColor="@color/red"
                android:visibility="gone"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/lbl_advertencia_cadastrar_usuario_data_nascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Selecione uma data *"
                android:layout_marginRight="12dp"
                android:textColor="@color/red"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <com.vicmikhailau.maskededittext.MaskedEditText
                    android:id="@+id/txt_telefone"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Telefone"
                    android:inputType="phone"
                    android:textSize="14sp"
                    app:mask="(##)#########" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_advertencia_cadastrar_usuario_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Insira uma email válido \nou retire os espaços *"
                    android:textColor="@color/red"
                    android:visibility="gone"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/lbl_advertencia_cadastrar_usuario_telefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Insira um número \nde telefone válido *"
                    android:textColor="@color/red"
                    android:layout_marginRight="33dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar senha"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_senha"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Senha"
                    android:inputType="text|textPassword"
                    android:textSize="14sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/txt_confirmar_senha"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Confirmar Senha"
                    android:inputType="text|textPassword"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/lbl_advertencia_cadastrar_usuario_senhas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* As senhas não são iguais *"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_cadastrar_senha_invalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="A senha deve conter pelo menos 6 caracteres e não podem haver espaços vazios"
                android:textSize="12sp"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_cadastro_psicologo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/lbl_numero_registro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de registro"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/lbl_estado_regiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado/Região do registro"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_numero_registro"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/spn_regiao"
                    android:layout_width="155dp"
                    android:layout_height="48dp"
                    android:contentDescription="spinner de genero"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_advertencia_cadastrar_usuario_psicologo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Os campos de cadastro do psicólogo não podem ser vazios *"
                android:textColor="@color/red"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btn_cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:text="Cadastrar"/>


            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/voltar_color"
                android:textColor="@color/yellow"
                android:text="Voltar" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>

