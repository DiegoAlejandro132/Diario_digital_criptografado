<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressive_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="1dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_conteudo_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="151dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_splash_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:text="Seja bem-vindo ao seu diÃ¡rio"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/borda_edit_text"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:elevation="10dp"
                android:hint="E-mail"
                android:inputType="text|textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/txt_senha"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:background="@drawable/borda_edit_text"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:elevation="10dp"
                android:hint="Senha"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_ir_redefinir_senha"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:gravity="end"
                    android:text="Esqueceu a senha?"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/transparent_orange"
                android:text="Login"
                android:textColor="@color/pastel_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_ir_cadastro"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/transparent_orange"
                android:text="Cadastre-se"
                android:textColor="@color/pastel_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>